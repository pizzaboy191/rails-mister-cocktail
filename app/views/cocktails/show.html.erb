<div class="container">
  <h1><strong><%= @cocktail.name %> </strong>details </h1>
  <ul>
    <%= cl_image_tag @cocktail.photo.key, :gravity=>"face", :width=>150, :height=>150, :crop=>"thumb" %>
    <% @cocktail.doses.each do |dose| %>
    <li>
      <%= dose.description %> <%= dose.ingredient.name %>
      <%= link_to 'Delete', dose_path(dose), method: :delete,
                                              data: { confirm: "Are you sure?" } %>
    </li>
    <% end %>
  </ul>
<%= link_to 'Add Dose', new_cocktail_dose_path(@cocktail)  %>
<%= link_to 'Homepage', cocktails_path  %>

</div>



