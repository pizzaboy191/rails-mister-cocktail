
<div class="container">
    <%= cl_image_tag @cocktail.photo.key, class: "banner-img m-2 " %>

  <div class= "container m-2">
    <h2><strong><%= @cocktail.name %> </strong>details</h2>
    <p><%=  @cocktail.description %></p>
      <% @cocktail.doses.each do |dose| %>
      <p> <%= dose.description %> <%= dose.ingredient.name %><span> <%= link_to "", dose_path(dose), method: :delete,
                                              data: { confirm: "Are you sure?" }, class: "fas fa-trash-alt" %></span></p>

      <% end %>
    <%= link_to 'Add Dose', new_cocktail_dose_path(@cocktail), class: "btn btn-primary" %>
    <%= link_to 'Homepage', cocktails_path, class: "btn btn-primary" %>
  </div>
</div>

