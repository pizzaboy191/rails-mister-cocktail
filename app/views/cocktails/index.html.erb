<div class="container">
<%= simple_form_for :search, url: cocktails_path, method: :get do |f| %>
  <div class="search-form-control form-group">
    <input class="form-control string required" type="text" name="search[query]" id="search_query" placeholder="Find a cocktail" />
    <button name="button" type="submit" class="btn btn-flat">
      <i class="fas fa-search"></i> Search
    </button>
  </div>
<% end %>
  <h1>Cocktails</h1>

<ul>
    <% @cocktails.each do |cocktail| %>
    <li><%= link_to "#{cocktail.name}", cocktail_path(cocktail)  %></li>
    <% end %>
</ul>

  <%= link_to 'Create Cocktail', new_cocktail_path  %>
</div>
